// to use this custom model you need to set the following option in the config.yml
// graph.vehicles: roads|transportation_mode=HGV,car
// graph.encoded_values: toll,hgv,surface,max_width,max_height
// profiles:
//    - name: truck
//      vehicle: roads
//      weighting: custom
//      custom_model_files: [package.json]
{
  "distance_influence": 100,
  "priority": [
    {
      "if": "road_environment == FERRY || road_environment == TUNNEL || road_environment == BRIDGE || road_environment == FORD",
      "multiply_by": "0.1"
    },
    {
      "else_if": "road_class == RESIDENTIAL || road_class == TERTIARY",
      "multiply_by": "0.9"
    },
    {
      "else_if": "road_access == PRIVATE",
      "multiply_by": "0"
    },
    {
      "else_if": "car_access == false",
      "multiply_by": "0"
    },
    {
      "else_if": "toll == HGV",
      "multiply_by": "0.9"
    },
    {
      "else_if": "junction == ROUNDABOUT",
      "multiply_by": "0"
    },
    {
      "else_if": "max_width <= 2.1 || max_weight <= 3.5 || max_height <= 6.730",
      "multiply_by": "0.9"
    }
  ],
  "speed": [
    { "if": "true", "limit_to": "car_average_speed * 0.9" },
    { "if": "true", "limit_to": "60" }
  ]
}
